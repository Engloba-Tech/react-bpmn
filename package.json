{
	"name": "@engloba-tech/react-bpmn",
	"version": "0.0.1",
	"description": "extension of BPMN js for React",
	"scripts": {
		"clean": "rimraf ./dist",
		"build": "npm run clean && npm run build:es && npm run build:umd",
		"build:umd": "rollup -c",
		"build:es": "cross-env BABEL_ENV=es ./node_modules/.bin/babel src --out-dir dist/es",
		"prepublish": "npm run build",
		"lint": "eslint \"./src/**/*.{js,jsx}\""
	},
	"keywords": [
		"bpmn",
		"react",
		"components",
		"engloba"
	],
	"main": "dist/index.js",
	"module": "dist/es/index.js",
	"types": "dist/index.d.ts",
	"dependencies": {
		"bpmn-js": "^8.2.0",
		"prop-types": "^15.0.0"
	},
	"peerDependencies": {
		"react": "^15.0.0 || ^16.0.0 || ^17.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.13",
		"@babel/core": "^7.12.13",
		"@babel/preset-env": "^7.12.13",
		"@babel/preset-react": "^7.12.13",
		"@typescript-eslint/eslint-plugin": "^4.0.0",
		"@typescript-eslint/parser": "^4.0.0",
		"@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
		"babel-loader": "^8.2.2",
		"cross-env": "^7.0.2",
		"css-loader": "^5.0.2",
		"eslint": "^7.5.0",
		"eslint-config-react-app": "^6.0.0",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-react": "^7.20.3",
		"eslint-plugin-react-hooks": "^4.0.8",
		"postcss": "^8.2.6",
		"react": "^17.0.1",
		"react-dom": "^15.0.0 || ^16.0.0 || ^17.0.0",
		"rimraf": "^3.0.2",
		"rollup": "^2.26.10",
		"rollup-plugin-babel": "^4.4.0",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-copy": "^3.3.0",
		"rollup-plugin-dts": "^2.0.1",
		"rollup-plugin-import-css": "^1.1.5",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-postcss": "^4.0.0",
		"rollup-plugin-uglify": "^6.0.4",
		"typescript": "^4.1.3"
	},
	"eslintConfig": {
		"extends": [
			"react-app"
		],
		"plugins": [
			"react-hooks"
		],
		"globals": {
			"fixture": true,
			"location": true
		},
		"rules": {
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn",
			"no-throw-literal": "off",
			"react/jsx-fragments": "error",
			"react/prop-types": 1,
			"no-console": "warn",
			"no-debugger": "warn",
			"no-use-before-define": 2,
			"spaced-comment": "warn",
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Engloba-Tech/react-bpmn.git"
	},
	"author": "engloba-tech",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Engloba-Tech/react-bpmn/issues"
	},
	"homepage": "https://github.com/Engloba-Tech/react-bpmn#readme"
}
